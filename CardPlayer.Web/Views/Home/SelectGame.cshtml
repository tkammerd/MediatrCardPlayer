@model FoyerViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">CardPlayer</h1>
    <p>Games and Players.</p>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="SelectGame">
                <div asp-validation-summary="None" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GameIdSelected" class="control-label"></label>
                    <input asp-for="GameIdSelected" class="form-control" />
                    <span asp-validation-for="GameIdSelected" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Select" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @foreach (var game in @Model.Games)
    {
        <table>
            <tr>
                <td>Game ID:</td>
                <td>@game.Id</td>
                <td>Deck Type:</td>
                <td>@game.StandardDeckType</td>
                <td>Max Players:</td>
                <td>@game.MaximumPlayers</td>
                <td>Current Players:</td>
                <td>@game.Players.Count</td>
                <td>Starting # of Cards:</td>
                <td>@game.StartDeck.Cards.Count</td>
                <td>Current # of Cards:</td>
                <td>@game.ShuffledDeck.Cards.Count</td>
            </tr>
        </table>
        <table>
            @foreach (var player in game.Players)
            {
                <tr>
                    <td>@player.Name</td>
                    @foreach (var card in player.PlayerHand.Cards)
                    {
                        <td>@card</td>
                    }
                </tr>
            }
            @if (game.Players.Count == 0)
            {
                <tr><td>No players yet.</td></tr>
            }
        </table>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
